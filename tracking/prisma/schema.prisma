generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./buzzineTracking.db"
}

model TrackingEntry {
  day            DateTime                 @id @unique
  bedTime        DateTime?
  sleepTime      DateTime?
  firstAlarmTime DateTime?
  wakeUpTime     DateTime?
  getUpTime      DateTime?
  rate           Int?
  changes        TrackingVersionHistory[]
}

model TrackingVersionHistory {
  id        String        @id @default(uuid())
  timestamp DateTime      @default(now())
  day       DateTime
  entry     TrackingEntry @relation(fields: [day], references: [day])
  fieldName String
  value     DateTime
}
