generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./buzzineTracking.db"
}

model TrackingEntry {
  date           DateTime                 @id @unique
  bedTime        DateTime?
  sleepTime      DateTime?
  firstAlarmTime DateTime?
  wakeUpTime     DateTime?
  getUpTime      DateTime?
  rate           Int?
  changes        TrackingVersionHistory[]
}

model TrackingVersionHistory {
  id        String        @id @default(cuid())
  timestamp DateTime      @default(now())
  date      DateTime
  entry     TrackingEntry @relation(fields: [date], references: [date])
  fieldName String
  value     DateTime
}
