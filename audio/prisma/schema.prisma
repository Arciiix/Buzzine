generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../buzzineAudio.db"
}

model AlarmsAudios {
  id                Int               @id @default(autoincrement())
  alarmId           String            @unique
  audioId           String
  AudioNameMappings AudioNameMappings @relation(fields: [audioId], references: [audioId], onDelete: NoAction)
}

model AudioNameMappings {
  audioId      String         @id @default(cuid())
  filename     String
  friendlyName String?
  youtubeID    String?
  duration     Float?
  playFrom     Float?
  playTo       Float?
  AlarmsAudios AlarmsAudios[]
  createdAt    DateTime       @default(now())
}
